RewriteEngine on

# make sure "/" isn't served
RewriteRule ^$ %{REQUEST_URI}index [R,L]

#hostnames can work for simple things too
RewriteCond %{HTTP_HOST} ^(.*)\.webnumbr\.com$
RewriteRule ^(.*)$ http://webnumbr.com/%1 [R,L]

#/n is old way of doing it
RewriteRule ^n/(.*)$ http://webnumbr.com/$1 [R=301,L]

#check if you can add .php and get a good file
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php

#check if the file doesn't exist and then assume it is a numbr
RewriteCond %{REQUEST_FILENAME} !-f
#append query string
RewriteRule ^(.*)$ numbr.php?name=$1 [QSA] 
